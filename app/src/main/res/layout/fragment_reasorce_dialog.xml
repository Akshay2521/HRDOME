<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintTop_toTopOf="parent"

        android:id="@+id/constResouce"
        android:background="@drawable/sheet_rounded"
        android:visibility="visible"
        android:layout_width="match_parent"
     android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Role to Particular Employee"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                />



            <LinearLayout
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_14sdp"

                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role : "
                    android:textSize="@dimen/_12ssp"

                    android:textColor="@color/black"
                    />

                <EditText
android:background="@drawable/edt_bg"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/edt_role"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"

                    android:hint="Enter Role" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_14sdp"

                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/StartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date: "
                    android:textSize="@dimen/_12ssp"

                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:background="@drawable/edt_bg"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/edt_startdate"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"

                    android:hint="Enter Start Date" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_14sdp"

                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/EndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date: "
                    android:textSize="@dimen/_12ssp"

                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:background="@drawable/edt_bg"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/edt_enddate"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"

                    android:hint="Enter End Date" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginHorizontal="@dimen/_14sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_14sdp"

                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks: "
                    android:textSize="@dimen/_12ssp"

                    android:textColor="@color/black"
                    />

                <EditText
                    android:textColor="@color/black"
                    android:background="@drawable/edt_bg"
                    android:padding="@dimen/_5sdp"
                    android:id="@+id/edt_remarks"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/_12ssp"
                    android:layout_height="wrap_content"

                    android:hint="Enter Remarks" />
            </LinearLayout>

            <Spinner
                android:id="@+id/employee"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:gravity="start"

                android:textAlignment="viewStart"
                android:scrollbarSize="25sp" />

            <Spinner
                android:id="@+id/manager"

                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:gravity="start"

                android:textAlignment="viewStart"
                android:scrollbarSize="25sp" />


            <Button
                android:visibility="gone"
                android:id="@+id/btn_save_projectresource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:text="Save"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/btnSubmit"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
android:layout_gravity="end"
            android:background="@drawable/circle_green"
            android:src="@drawable/ic_forward_arrow"
            android:textColor="@color/white"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_white"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/constResouce"
       app:layout_constraintTop_toBottomOf="@+id/constResouce"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reject"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
